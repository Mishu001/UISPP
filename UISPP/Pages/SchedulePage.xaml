                                <Label Text="Friday" TextColor="#172B51" FontAttributes="Bold" FontSize="Large"></Label>

                                <Label Text="8th of September" TextColor="#172B51" FontSize="Micro"></Label>
                            <Label Text="2023" TextColor="#172B51" FontSize="Micro"></Label>
                        </StackLayout>
                        <StackLayout Grid.Column="1">
                            <Image Source="path74.png" VerticalOptions="CenterAndExpand"  HorizontalOptions="EndAndExpand"></Image>
                        </StackLayout>
                    </Grid>
                </StackLayout>
            </Frame>
